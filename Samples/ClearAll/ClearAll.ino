
// the setup routine runs once when you press reset:
void setup()  { 
  // declare pin 9 to be an output:
  pinMode(0, OUTPUT);
  pinMode(1, OUTPUT);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(13, OUTPUT);
} 

// the loop routine runs over and over again forever:
void loop()  { 
  // set the brightness of pin 9:
  digitalWrite(0, 0);    
  digitalWrite(1, 0);   
  digitalWrite(2, 0);   
  digitalWrite(3, 0);   
  digitalWrite(4, 0);   
  digitalWrite(5, 0);   
  digitalWrite(6, 0);   
  digitalWrite(7, 0);    
  digitalWrite(8, 0);   
  digitalWrite(9, 0);   
  digitalWrite(10, 0);   
  digitalWrite(11, 0);   
  digitalWrite(12, 0);   
  digitalWrite(13, 0);  

  // wait for 30 milliseconds to see the dimming effect    
  delay(500);                            
}

